#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-push hook - runs before pushing to remote repository
# This hook runs more comprehensive checks that might take longer

echo "ðŸš€ Running pre-push checks..."

# Run full test suite
echo "Running tests..."
npm run test

# Run build to ensure everything compiles
echo "Building project..."
npm run build

# Run linting on entire codebase
echo "Linting entire codebase..."
npm run lint

# Add more pre-push checks here:
#
# 1. Run integration tests:
#   npm run test:integration
#
# 2. Run end-to-end tests:
#   npm run test:e2e
#
# 3. Check bundle size:
#   npm run bundle-analyzer
#
# 4. Run security audit:
#   npm audit --audit-level high
#
# 5. Check for outdated dependencies:
#   npm outdated
#
# 6. Validate environment variables:
#   npm run validate-env
#
# 7. Run performance tests:
#   npm run test:performance

